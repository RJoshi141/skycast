{
  "compilerOptions": {
    "target": "ESNext", 
    "types": ["tailwindcss"],
    "lib": ["DOM", "DOM.Iterable", "ESNext"], 
    "module": "ESNext", // Enables support for import.meta
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src"], // Ensure this points to your app's source directory
  "exclude": ["node_modules"]
}
